    <script>
        // Donn√©es simul√©es
        let userData = {
            name: 'Santiago Barnab√©u',
            email: 'santiago.barnabeu@gmail.com'
        };

        let activitiesData = [
            {
                id: 1,
                title: 'Morning Yoga in the Park',
                date: 'June 15, 2024 - 9:00 AM',
                location: 'Central Park, New York',
                status: 'registered',
                gradient: 'linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%)'
            },
            {
                id: 2,
                title: 'Beginner Photography',
                date: 'June 22, 2024 - 2:00 PM',
                location: 'Community Arts Center',
                status: 'registered',
                gradient: 'linear-gradient(135deg, #fa709a 0%, #fee140 100%)'
            },
            {
                id: 3,
                title: 'Sunset Hike & Picnic',
                date: 'July 01, 2024 - 6:00 PM',
                location: 'Mountain View Trail',
                status: 'registered',
                gradient: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)'
            },
            {
                id: 4,
                title: 'Local Farmers Market Visit',
                date: 'July 07, 2024 - 10:00 AM',
                location: 'Downtown Plaza',
                status: 'registered',
                gradient: 'linear-gradient(135deg, #f093fb 0%, #f5576c 100%)'
            },
            {
                id: 5,
                title: 'Singing Lessons',
                date: 'June 29, 2024 - 7:00 PM',
                location: 'Garnier Opera House',
                status: 'waiting',
                gradient: 'linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%)'
            },
            {
                id: 6,
                title: 'Pottery Wheel Workshop',
                date: 'July 10, 2024 - 3:00 PM',
                location: 'Clay Studio',
                status: 'waiting',
                gradient: 'linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%)'
            }
        ];

        let notificationsData = {
            email: true,
            push: false
        };

        // Initialisation
        function init() {
            loadActivities();
            loadNotifications();
        }

        // Charger les activit√©s
        function loadActivities() {
            const registered = activitiesData.filter(a => a.status === 'registered');
            const waiting = activitiesData.filter(a => a.status === 'waiting');

            document.getElementById('registeredActivities').innerHTML = registered.map(activity => `
                <div class="activity-card">
                    <div class="activity-image" style="background: ${activity.gradient};">
                        <span class="activity-status">Registered</span>
                    </div>
                    <div class="activity-content">
                        <h3 class="activity-title">${activity.title}</h3>
                        <p class="activity-info"><strong>Date:</strong> ${activity.date}</p>
                        <p class="activity-info"><strong>Location:</strong> ${activity.location}</p>
                        <button class="view-details-btn">View Details</button>
                    </div>
                </div>
            `).join('');

            document.getElementById('waitingActivities').innerHTML = waiting.map(activity => `
                <div class="activity-card">
                    <div class="activity-image" style="background: ${activity.gradient};">
                        <span class="activity-status">Waiting List</span>
                    </div>
                    <div class="activity-content">
                        <h3 class="activity-title">${activity.title}</h3>
                        <p class="activity-info"><strong>Date:</strong> ${activity.date}</p>
                        <p class="activity-info"><strong>Location:</strong> ${activity.location}</p>
                        <button class="view-details-btn">Check Status</button>
                    </div>
                </div>
            `).join('');
        }

        // Charger les notifications
        function loadNotifications() {
            document.getElementById('emailToggle').checked = notificationsData.email;
            document.getElementById('pushToggle').checked = notificationsData.push;
        }

        // Toggle notifications
        document.getElementById('emailToggle').addEventListener('change', function() {
            notificationsData.email = this.checked;
            showToast('Email notifications ' + (this.checked ? 'activ√©es' : 'd√©sactiv√©es'), 'success');
        });

        document.getElementById('pushToggle').addEventListener('change', function() {
            notificationsData.push = this.checked;
            showToast('Push notifications ' + (this.checked ? 'activ√©es' : 'd√©sactiv√©es'), 'success');
        });

        // Ouvrir modal edit
        function openEditModal() {
            document.getElementById('editName').value = userData.name;
            document.getElementById('editEmail').value = userData.email;
            document.getElementById('editModal').classList.add('active');
        }

        // Ouvrir modal password
        function openPasswordModal() {
            document.getElementById('passwordModal').classList.add('active');
            document.getElementById('passwordForm').reset();
        }

        // Fermer modal
        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
        }

        // Form edit profile
        document.getElementById('editForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const name = document.getElementById('editName').value;
            const email = document.getElementById('editEmail').value;
            
            if (!email.includes('@')) {
                showToast('Email invalide', 'error');
                return;
            }
            
            userData.name = name;
            userData.email = email;
            
            document.getElementById('userName').textContent = name;
            document.getElementById('userEmail').textContent = email;
            
            closeModal('editModal');
            showToast('Profil mis √† jour avec succ√®s', 'success');
        });

        // Form change password
        document.getElementById('passwordForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const current = document.getElementById('currentPassword').value;
            const newPass = document.getElementById('newPassword').value;
            const confirm = document.getElementById('confirmPassword').value;
            
            if (newPass !== confirm) {
                showToast('Les mots de passe ne correspondent pas', 'error');
                return;
            }
            
            if (newPass.length < 8) {
                showToast('Le mot de passe doit contenir au moins 8 caract√®res', 'error');
                return;
            }
            
            closeModal('passwordModal');
            showToast('Mot de passe modifi√© avec succ√®s', 'success');
            document.getElementById('passwordForm').reset();
        });

        // Download data
        function downloadData() {
            if (!confirm('Voulez-vous t√©l√©charger toutes vos donn√©es ?')) return;
            
            const data = {
                export_date: new Date().toISOString(),
                profile: userData,
                activities: activitiesData,
                notifications: notificationsData
            };
            
            const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'linkup_data_' + new Date().toISOString().split('T')[0] + '.json';
            a.click();
            URL.revokeObjectURL(url);
            
            showToast('Donn√©es t√©l√©charg√©es', 'success');
        }

        // Delete account
        function deleteAccount() {
            if (!confirm('‚ö†Ô∏è ATTENTION: √ätes-vous s√ªr de vouloir supprimer votre compte ?\n\nCette action est IRR√âVERSIBLE et supprimera:\n- Votre profil\n- Toutes vos activit√©s\n- Toutes vos inscriptions\n- Toutes vos donn√©es')) {
                return;
            }
            
            if (!confirm('Derni√®re confirmation: Voulez-vous vraiment supprimer d√©finitivement votre compte ?')) {
                return;
            }
            
            showToast('Compte supprim√© avec succ√®s', 'success');
            setTimeout(() => {
                alert('Vous allez √™tre redirig√© vers la page d\'accueil');
            }, 2000);
        }

        // Toast notifications
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = 'toast ' + type;
            toast.textContent = message;
            document.body.appendChild(toast);
            
            setTimeout(() => {
                toast.style.animation = 'slideOut 0.3s ease';
                setTimeout(() => toast.remove(), 300);
            }, 3000);
        }

        // Fermer modal en cliquant √† l'ext√©rieur
        document.querySelectorAll('.modal').forEach(modal => {
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeModal(modal.id);
                }
            });
        });

        // Initialiser au chargement
        init();
    </script>
</body>
