<script>
const form = document.getElementById('chat-form');
const messageBox = document.getElementById('message');
const usernameBox = document.getElementById('username');
const chatBox = document.getElementById('chat-box');

function loadMessages() {
  fetch('read_messages.php')
    .then(response => response.text())
    .then(data => {
      chatBox.innerHTML = data;
      chatBox.scrollTop = chatBox.scrollHeight;
    });
}
setInterval(loadMessages, 2000);
loadMessages();

form.addEventListener('submit', e => {
  e.preventDefault();
  const username = usernameBox.value.trim();
  const message = messageBox.value.trim();
  if (username && message) {
    fetch('send_message.php', {
      method: 'POST',
      headers: {'Content-Type': 'application/x-www-form-urlencoded'},
      body: `username=${encodeURIComponent(username)}&message=${encodeURIComponent(message)}`
    }).then(() => {
      messageBox.value = '';
    });
  }
});
</script>
</body>
</html>
  


#read_messages.php
<?php
require 'config.php';

try {
    $stmt = $pdo->prepare("SELECT username, message, created_at FROM messages ORDER BY id DESC LIMIT 50");
    $stmt->execute();
    $messages = $stmt->fetchAll(PDO::FETCH_ASSOC);
    
    foreach (array_reverse($messages) as $msg) {
        $time = (new DateTime($msg['created_at']))->format('H:i:s');
        echo "<div class='msg'>";
        echo "<strong>" . htmlspecialchars($msg['username']) . "</strong>: " . htmlspecialchars($msg['message']);
        echo "<br><small>$time</small>";
        echo "</div>";
    }
} catch (Exception $e) {
    echo "Erreur : " . $e->getMessage();
}
?>





#send_messages.php
<?php
require 'config.php';

if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    $username = $_POST['username'] ?? '';
    $message = $_POST['message'] ?? '';
    
    if (trim($username) && trim($message)) {
        try {
            $stmt = $pdo->prepare("INSERT INTO messages (username, message) VALUES (?, ?)");
            $stmt->execute([htmlspecialchars($username),htmlspecialchars ($message)]);
    
        } catch (Exception $e) {
            echo "Erreur : " . $e->getMessage();
        }
    }
}
?>





